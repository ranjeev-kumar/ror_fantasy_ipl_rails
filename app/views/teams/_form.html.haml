= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :owner
    = f.text_field :owner
  .field
    = f.label :home_ground
    = f.text_field :home_ground
  .field
    = f.label :captain
    = f.text_field :captain
  .field
    = f.label :coach
    = f.text_field :coach
  .field
    = f.label :official_team_site
    = f.text_field :official_team_site
  .field
    = f.label :rank
    = f.text_field :rank
  .field
    = f.label :point
    = f.text_field :point
  .actions
    = f.submit 'Save'
